    </div>

    <div class="recent--listings">
        <% if @community_items %>
        <h1>NEARBY LISTINGS</h1>
        <% end %>
        <div class="items">
        <% @community_items.each do |item| %>
          <div class="item">
              <div class="item--photo">
                  <%= link_to(image_tag("#{item.photo}", :alt => "#{item.name}"), item) %>
              </div>
            
              <div class="user--info index">
                  <a href="<% item.user %>">
