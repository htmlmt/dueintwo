<% if current_user %>
    <%= form_for Item.new, :html => {:class => "search-wrapper"}, method: :get, :url => url_for(:controller => 'items', :action => 'search') do |f| %>
      <p class="search--submit">
        <%= text_field_tag :q, params[:q], placeholder: "LOOKING FOR SOMETHING?" %>
        <%= submit_tag "", name: nil %>
      </p>
    <% end %>
    
    <div class="container">

    	<ul class="tabs">
    		<li class="tab-link current" data-tab="tab-1">ON MY PORCH</li>
    		<li class="tab-link" data-tab="tab-2">IN MY HOUSE</li>
    		<li class="tab-link" data-tab="tab-3">IN THEIR HOUSE</li>
    	</ul>

    	<div id="tab-1" class="tab-content current">
        <% if @on_my_porch != nil || [] %>
        <h1>Your items ready to loan out:</h1>
        <% @on_my_porch.each do |item| %>
          <div class="tab--item">
            <div class="item--photo">
                <%= link_to(image_tag("#{item.photo}", :alt => "#{item.name}"), item) %>
            </div>
            <div class="bottom--section">
              <div class="tab--name"><h2><%= link_to "#{item.name}", item %></h2></div>
              <div class="top--buttons">
                <div class="edit"><%= link_to(image_tag("edit.png", :alt => "edit"), edit_item_path(item)) %></div>
                <div class="calendar"><%= link_to(image_tag("calendar.png", :alt => "calendar"), item) %></div>
              </div>
            </div>
            <div class="item--bottom">
            <div class="price">$<%= '%.0f' % item.price %></div>
              <div class="trash"><%= link_to(image_tag("trash.png", :alt => "trash"), item_path(item), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %></div>
            </div>
          </div>
        <% end %>
        <% end %>
    	</div>
    	<div id="tab-2" class="tab-content">
        <h1>Their items you're borrowing:</h1>
        <% @in_my_house.each do |loan| %>
          <div class="tab--item">
            <div class="item--photo">
                <%= link_to(image_tag("#{loan.item.photo}", :alt => "#{loan.item.name}"), loan.item) %>
            </div>
            <div class="bottom--section">
              <div class="tab--name"><h2><%= link_to "#{loan.item.name}", loan.item %></h2></div>
              <div class="top--buttons">
                <div class="edit"><%= link_to(image_tag("edit.png", :alt => "edit"), edit_item_path(loan.item)) %></div>
                <div class="calendar"><%= link_to(image_tag("calendar.png", :alt => "calendar"), loan.item) %></div>
              </div>
            </div>
            <div class="item--bottom">
            <div class="price">$<%= '%.0f' % loan.item.price %></div>
              <div class="trash"><%= link_to(image_tag("trash.png", :alt => "trash"), item_path(loan.item), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %></div>
            </div>
          </div>
        <% end %>
    	</div>
    	<div id="tab-3" class="tab-content">
        <h1>Your items others are borrowing:</h1>
        <% @in_their_house.each do |loan| %>
          <div class="tab--item">
