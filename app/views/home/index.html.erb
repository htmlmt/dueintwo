              </div>
            </div>
            <div class="item--bottom">
            <div class="price">$<%= '%.0f' % loan.item.price %></div>
              <div class="trash"><%= link_to(image_tag("trash.png", :alt => "trash"), item_path(loan.item), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %></div>
            </div>
          </div>
        <% end %>
